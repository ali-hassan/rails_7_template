    <section class="information-area-product">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="text-wrap">
              <h1 class="h1-common mb-2">More Questions?</h1>
              <p class="p-common mb-0">Let our Funding Concierge reach out.</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="right-div">
              <form
                class="row row-cols-lg-auto g-3 width-480 align-items-center needs-validation"
                novalidate
              >
                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="firstNameInfo"
                    placeholder="First Name*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="lastNameInfo"
                    placeholder="Last Name*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="companyInfo"
                    placeholder="Company*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="phoneInfo"
                    placeholder="Phone Number*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-12 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="emailInfo"
                    placeholder="Email*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-yellow color-purple">
                    <a href="#">GET IN TOUCH</a>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

