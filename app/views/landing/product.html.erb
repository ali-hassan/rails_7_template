                <h2 class="h2-common color-purple">Zero</h2>
                <span>Origination Fees</span>
              </div>
            </div>
          </div>
    
          <div class="col">
            <div class="flex-items">
              <%= image_tag("fees.svg", alt:"fees") %>
              <div>
                <h2 class="h2-common color-purple">Zero</h2>
                <span>Processing Fees</span>
              </div>
            </div>
          </div>
    
          <div class="col">
            <div class="flex-items">
              <%= image_tag("credit.svg", alt:"credit") %>
