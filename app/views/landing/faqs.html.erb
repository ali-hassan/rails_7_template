<section class="faqs-area">
<div class="container">
  <div class="row">
  <% @faq.each_with_index do |faq, index|%>
    <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="<%= 'heading'+ index.to_s %>">
        <button class="accordion-button <%= index > 0 ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#<%= 'collapse'+ index.to_s %>" aria-expanded="true" aria-controls=" <%= 'collapse'+ index.to_s %>">    
        <p class="p-common question-text m-0">
        <%=faq.question%>
      </p>
        </button>
      </h2>
      <div id="<%= 'collapse'+ index.to_s %>" class="accordion-collapse collapse <%= index == 0 ? 'show' : '' %> " aria-labelledby="<%= 'heading'+ index.to_s %>" data-bs-parent="#accordionExample">
        <div class="accordion-body">
        <div class="color-purple answer-text">
        <%=faq.answer.html_safe%>
      </div>
        </div>
      </div>
    </div>
  <%end%>  
</div>
  </div>
</div>
</section>
<section class="information-area-product mt-1">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="text-wrap">
              <h1 class="h1-common mb-2">More Questions?</h1>
              <p class="p-common mb-0">Let our Funding Concierge reach out.</p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="right-div">
              <form
                class="row row-cols-lg-auto g-3 width-480 align-items-center needs-validation"
                novalidate
              >
                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="firstNameInfo"
                    placeholder="First Name*"
                    required
                  />
