                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="lastNameInfo"
                    placeholder="Last Name*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="companyInfo"
                    placeholder="Company*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-6 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="phoneInfo"
                    placeholder="Phone Number*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>

                <div class="col-12 col-margin">
                  <input
                    type="text"
                    class="form-control input-area"
                    id="emailInfo"
                    placeholder="Email*"
                    required
                  />
                  <div class="invalid-feedback">can't be blank</div>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-yellow color-purple">
                    <a href="#">GET IN TOUCH</a>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
