<% if @user.errors.blank? %>
  <%= turbo_stream.update("flash", partial: 'shared/flash', locals: { msg_type: :notice, message: "Personal info successfully saved." }) %> 
  <%= turbo_stream.replace("header_form", partial: "shared/step_header", locals: { progress: 20, title: 'Business Info', step_no: 2 })  %>
  <%= turbo_stream.replace("collection_info_section", partial: "business_info/edit", locals: { business_info: @business_info })  %>
<% else %>
  <%= turbo_stream.replace("personal_info_form", partial: "personal_info/form", locals: { user: @user })  %>
<% end %>